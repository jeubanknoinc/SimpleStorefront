{% extends 'NoIncSimpleStorefrontBundle:Default:base.html.twig' %}

{% block body %} 
	<div class="item pricing" id="pricing_table1">
		
		<div class="container">	

			<h2 class="text-center">

				Make Products

			</h2>

			<div class="row">

				{% for recipe in recipes %}
					{% include 'NoIncSimpleStorefrontBundle:Default:product-make.html.twig' with {'recipe': recipe} %}
				{% endfor %}
				
			</div><!-- /.row -->

		</div><!-- /.container -->
	
	</div><!-- /.item -->

	<div class="ingredient pricing" id="pricing_table2">

		<div class="container">
		
			<div class="panel panel-default">

				<h2 class="text-center">

					Buy Ingredients
				
				</h2>

				<div class="panel-body">

					{% for recipe in recipes %}
						{% for recipeIngredient in recipe.recipeIngredients %}
							{% include 'NoIncSimpleStorefrontBundle:Default:ingredient-buy.html.twig' with {'ingredient': recipeIngredient.ingredient} %}				
						{% endfor %}
					{% endfor %}			
				</div><!-- /.panel-body -->

			</div><!-- /.panel.panel-default -->

		</div><!-- /.container -->

	</div><!-- /.ingredient -->
	
	{{ dump(recipes) }}
{% endblock %}
