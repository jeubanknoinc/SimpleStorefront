{% extends 'NoIncSimpleStorefrontBundle:Default:base.html.twig' %}

{% block body %}

<div class="container">

    <ul class="nav nav-pills">
   
        <li class="active"><a data-toggle="pill" href="#pricing_table1">Browse Store</a></li>
    
        <li><a data-toggle="pill" href="#pricing_table2">View Cart</a></li>

    </ul>

    <div class="tab-content">
 
	    <div class="tab-pane fade in active" id="pricing_table1">
		
		    <div class="row">
			
				{% for recipe in recipes %}
				    {% include 'NoIncSimpleStorefrontBundle:Default:product-buy.html.twig' with {'recipe': recipe} %}
				{% endfor %}
			
			</div><!-- /.row -->
		
	    </div><!-- /.tab-pane -->

        <div class="tab-pane fade" id="pricing_table2">

            <div class="row"> 

                <div class="col-md-4">
                    
                    <div class="pricing1"> 
                    
                        {% for recipe in recipes %}
                            {% for product in recipe.products %}
                                {% if product.cartflag == 1 %}                     
                                    {% include 'NoIncSimpleStorefrontBundle:Default:cart-item-delete.html.twig' with {'recipe': recipe} %}
                                {% endif %}
                            {% endfor %}
                        {% endfor %}

                    </div><!-- /.pricing1 -->
                    
                    {% include 'NoIncSimpleStorefrontBundle:Default:cart-clear.html.twig' %}
                    
                </div><!-- /.col-md-4 -->

            </div><!-- /.row -->

        </div><!-- /.tab-pane -->

    </div><!-- /.tab-content -->
	
</div><!-- /.container -->
{% endblock %}
